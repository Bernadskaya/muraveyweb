<!--  Steps -->
<div class="row" id="work">
    {% for entity in entities if entity.getAdGroup.id == '5'  %}
        {% if loop.first %}
            <h3 class="hr2 text-center margin-base"><span class="text-muted">{{ entity.getAdGroup.title }}</span></h3>
        {% endif %}
    {% endfor %}
</div>
<div class="iconbox section-small">
    <div class="row">
        {%  for entity in entities  %}
            {% if entity.getAdGroup.id == '5'  %}
                <div class="col-md-3 col-sm-12 col-xs-12">
                    <span class="{{ entity.icon }}"></span>
                    <h5 class="header">{{ entity.title }}</h5>
                    <div class="content">
                        {{ entity.text|raw('html') }}
                    </div>
                </div>
            {% endif %}
        {% endfor %}
        <div class="row">
            <div class="text-center">
                <a href="{{ path ('steps') }}" class="btn btn-primary btn-lg">Подробнее</a>
            </div>
        </div>
    </div>
</div>








